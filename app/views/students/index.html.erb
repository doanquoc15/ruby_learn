<% if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover mt-5">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Active</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td>
            <%= link_to student.first_name + ' ' + student.last_name, student %>
          </td>
          <td><%= student.email %></td>
          <td><%= student.phone %></td>
          <td><%= student.address %></td>
          <td>
         
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
              Delete
            </button>
            <button type="button" class="btn btn-success" style ="color:white" toggle="modal" target="#example">
               <%= link_to "Edit", edit_student_path(student) %>
            </button>
             <button type="button" class="btn btn-warning" style ="color:white" toggle="modal" target="#example">
               <%= link_to "Show", student %>
            </button>
          </td>
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Are you sure delete  <%=student.first_name+' '+student.last_name%>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <%= button_to "Delete", student, class:"btn btn-primary",  method: :delete %>
              </div>
            </div>
          </div>
        </div>
           
        </tr>
        <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Student', new_student_path, class:"btn btn-secondary" %>
<% else %>

<h1>Hello World!</h1>
This is my first Rails Webpage...

<% end %>